            <assign variable="adet" expression="0"/>
            <assign variable="i" expression="1"/>
            <output expression="&quot;Say&#305;lar&#305; girebilirsiniz. E&#287;er ki 0'a basarsan&#305;z i&#351;lem bitecektir&quot;" newline="True"/>
